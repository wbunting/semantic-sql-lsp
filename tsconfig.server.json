{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript target
    "module": "node16", // Use ESNext module system
    "moduleResolution": "node16", // Use Node.js module resolution
    "rootDir": ".",
    "outDir": "build", // Output directory for compiled files
    "strict": false, // Enable strict type-checking
    "esModuleInterop": true, // Allow `import`/`require` compatibility
    "skipLibCheck": true, // Skip type-checking for library files
    "resolveJsonModule": true, // Allow importing JSON files
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "app/lib/lsp-utils.ts",
    "app/lib/semantic-sql-lsp.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
